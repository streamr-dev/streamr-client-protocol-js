{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "declaration": true,
    "outDir": "dist",
    "rootDirs": ["src"],
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "dist",
    "jest.config.js",
    "node_modules",
    "test",
    "coverage"
  ]
}
